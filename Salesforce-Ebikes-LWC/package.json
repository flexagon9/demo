{
    "name": "ebikes-lwc",
    "private": true,
    "version": "1.0.0",
    "description": "EBikes Sample App - Lightning Web Components",
    "scripts": {
        "lint": "eslint **/lwc/**/*.js",
        "test": "npm run test:unit",
        "test:unit": "sfdx-lwc-jest --skipApiVersionCheck",
        "test:unit:watch": "sfdx-lwc-jest --watch --skipApiVersionCheck",
        "test:unit:debug": "sfdx-lwc-jest --debug --skipApiVersionCheck",
        "test:unit:coverage": "sfdx-lwc-jest --coverage --skipApiVersionCheck",
        "test:ui": "wdio",
        "test:ui:compile": "utam -c utam.config.js",
        "test:ui:generate:login": "node scripts/generate-login-url.js",
        "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
        "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
        "postinstall": "husky install",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
            "prettier --write"
        ],
        "**/lwc/**/*.js": [
            "eslint"
        ],
        "**/lwc/**": [
            "sfdx-lwc-jest --skipApiVersionCheck -- --bail --findRelatedTests"
        ]
    },
    "author": "salesforce.com",
    "license": "CC0-1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trailheadapps/ebikes-lwc"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.18.0",
        "@babel/preset-env": "^7.18.0",
        "@babel/register": "^7.17.7",
        "@lwc/eslint-plugin-lwc": "^1.2.1",
        "@prettier/plugin-xml": "^2.2.0",
        "@sa11y/jest": "^3.1.0",
        "@salesforce/eslint-config-lwc": "^3.3.1",
        "@salesforce/eslint-plugin-lightning": "^1.0.0",
        "@salesforce/sfdx-lwc-jest": "^1.1.0",
        "@wdio/cli": "^8.3.5",
        "@wdio/jasmine-framework": "^8.3.5",
        "@wdio/local-runner": "^8.3.5",
        "@wdio/spec-reporter": "^8.3.0",
        "chromedriver": "^101.0.0",
        "dotenv": "^16.0.1",
        "eslint": "^8.16.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.2.2",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.1",
        "prettier": "^2.6.2",
        "prettier-plugin-apex": "^1.10.0",
        "salesforce-pageobjects": "^1.1.0",
        "utam": "^1.0.4",
        "wdio-chromedriver-service": "^8.0.1",
        "wdio-utam-service": "^1.0.4"
    },
    "workspaces": [
        "./"
    ],
    "volta": {
        "node": "16.13.2",
        "npm": "8.1.2"
    }
}
